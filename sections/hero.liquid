{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class='card-top-container'>
    {% for block in section.blocks %}

        <h3>{{ block.settings.collection }}</h3>
        <p>This is a paragraph</p>
        <p>hello</p>
        <button>Click here</p>

    {% endfor %}
</div>

{% schema %}
    {
        "name": "Hero",
        "blocks": [
            {
                "type": "collection",
                "name": "Collection",
                "limit": 3,
                "settings": [
                    {
                        "type": "collection",
                        "id": "collection",
                        "label": "collection"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_bg",
                        "label": "Image Background"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_hover",
                        "label": "Image Hover"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Hero"
            }
        ]
    }
{% endschema %}